    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/orihome" />
    <Button
        android:id="@+id/home_button_amitechlogo"
        android:layout_width="190dip"
        android:layout_height="190dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00ffffff"
        android:elevation="20dip" />

    <Button
        android:id="@+id/home_button_events"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_above="@+id/home_button_amitechlogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-70dip"
        android:layout_marginLeft="20dip"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/home_button_sponsors"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_above="@+id/home_button_team"
        android:layout_alignLeft="@+id/home_button_favourites"
        android:layout_alignStart="@+id/home_button_favourites"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/home_button_favourites"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:background="#00ffffff"
        android:layout_below="@+id/home_button_amitechlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip" />

    <Button
        android:id="@+id/home_button_schedule"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/home_button_contactus"
        android:layout_toLeftOf="@+id/home_button_amitechlogo"
        android:layout_toStartOf="@+id/home_button_amitechlogo" />

    <Button
        android:id="@+id/home_button_team"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_alignTop="@+id/home_button_events"
        android:layout_toEndOf="@+id/home_button_amitechlogo"
        android:layout_toRightOf="@+id/home_button_amitechlogo"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/home_button_contactus"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:background="#00ffffff"
        android:layout_marginBottom="-40dip"
        android:layout_above="@+id/home_button_favourites"
        android:layout_alignLeft="@+id/home_button_team"
        android:layout_alignStart="@+id/home_button_team" />


